    {
      "id": "1.4",
      "title": "Temperatursysteme – Übersicht",
      "beschreibung": "Die VG-Normen definieren drei Haupttemperatursysteme für unterschiedliche Einsatzbedingungen",
      "systeme": [
        {
          "system": "System 25",
          "bezeichnung": "FR (Flame Retardant)",
          "betriebstemperatur": "-75°C bis +150°C",
          "kurzzeitgrenze": "+200°C (5 min)",
          "halogenfrei": false,
          "hauptanwendung": "Fahrzeuge, Flugzeuge"
        },
        {
          "system": "System 100",
          "bezeichnung": "LFH (Low Fire Hazard)",
          "betriebstemperatur": "-40°C bis +105°C",
          "kurzzeitgrenze": "+125°C (1h)",
          "halogenfrei": true,
          "lszh": true,
          "hauptanwendung": "Schiffe, U-Boote, Bahn"
        },
        {
          "system": "System 200",
          "bezeichnung": "HFR (High Flame Retardant)",
          "betriebstemperatur": "-55°C bis +200°C",
          "kurzzeitgrenze": "+250°C (5 min)",
          "halogenfrei": false,
          "hauptanwendung": "Triebwerke, Aerospace"
        }
      ],
      "entscheidungshilfe": {
        "geschlossener_raum": "SYSTEM 100 (halogenfrei, geringer Rauch) - für Schiff, U-Boot, Bahn",
        "extreme_temperatur_ueber_150": "SYSTEM 200 (bis +200°C)",
        "standardanwendung": "SYSTEM 25 (universell) - für Fahrzeug, Flugzeug"
      },
      "warnung": "WICHTIG: Systeme NICHT mischen! Jedes System hat eigene Materialien, Farben, Temperaturen."
